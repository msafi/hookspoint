{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",

    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "module": "CommonJS",
    "target": "ES2017",
    "sourceMap": true,

    "allowJs": true,
    "checkJs": true,

    "jsx": "react",

    "pretty": true,
    "baseUrl": ".",
    "declaration": false,
    "importHelpers": false,
    "removeComments": true,
    "stripInternal": true,
    "resolveJsonModule": true
  },

  "include": ["content", ".eleventy.ts", "declarations.d.ts"],
  "exclude": ["content/js", "node_modules"]
}
